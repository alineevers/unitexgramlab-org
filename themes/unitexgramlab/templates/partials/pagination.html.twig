<nav class="pagination">
    {% if pagination.hasNext %}
        <a class="older-posts" href="{{ base_url }}{{ pagination.params }}{{ pagination.nextUrl }}"><i class="fa fa-chevron-left"></i> Older posts</a>
    {% endif %}
    <span class="page-number">Page {{ uri.currentPage }} of {{ pagination|length }}</span>
    {% if pagination.hasPrev %}
        <a class="newer-posts" href="{{ base_url }}{{ pagination.params }}{{ pagination.prevUrl }}">Newer posts <i class="fa fa-chevron-right"></i></a>
    {% endif %}
</nav>
